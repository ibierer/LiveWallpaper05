<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExplorerActivity">

    <!-- Explorer UI elements here -->
    <Button
        android:id="@+id/b_test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Send"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ScrollView
        android:id="@+id/sv_wallpapers"
        android:layout_width="wrap_content"
        android:layout_height="650dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fadeScrollbars="false"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:id="@+id/sv_ll_wallpapers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/sv_ll_gl_wallpapers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_margin="30dp"
                android:useDefaultMargins="true"
                />
        </LinearLayout>

    </ScrollView>

    <!-- menu button below -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/f_toolbar"
        android:name="com.example.livewallpaper05.helpful_fragments.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>