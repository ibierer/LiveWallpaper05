<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".helpful_fragments.WallpaperFragment">

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_outline"
        android:clipToOutline="true"
        />

    <Button
        android:id="@+id/b_active_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_preview"
        app:layout_constraintStart_toStartOf="@id/iv_preview"
        app:layout_constraintEnd_toEndOf="@id/iv_preview"
        android:text="Activate!"
        android:textSize="10dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/b_delete_wallpaper"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_preview"
        app:layout_constraintEnd_toEndOf="@id/iv_preview"
        android:src="@drawable/exit_symbol"
        app:fabCustomSize="26dp"
        app:maxImageSize="16dp"
        />

    <!--
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_preview"
        app:layout_constraintStart_toStartOf="@id/iv_preview"
        app:layout_constraintEnd_toEndOf="@id/iv_preview"
        android:text="My Wallpaper!"
        />
        -->

</androidx.constraintlayout.widget.ConstraintLayout>